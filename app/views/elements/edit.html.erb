<div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
  <h1>要素編集</h1>

  <%= form_with model: @element, url: element_path, method: :patch do |f| %>
  
  <table class="col-6 mx-auto">
    <tr class="field">
      <td><%= f.label :name,"要素名" %></td>
      <td><%= f.text_field :name, required: true, autofocus: true %></td>
    </tr>

    <tr class="field">
      <td><%= f.label :side,"陣営" %></td>
      <td><%= f.select :side, Element.sides_i18n.keys.map { |k| [t("enums.element.side.#{k}"), k] } %></td>
    </tr>
  </table>

  <div class="btn-wrapper col-3 mx-auto">

    <div class="actions">
      <%= link_to "戻る", edit_tactic_path(@element.tactic_id), method: :get, class: 'btn-sm btn-secondary' %>

      <%= f.submit "更新", class: 'btn-sm btn-success' %>

      <%= link_to "削除", element_path(@element.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
  <% end %>
</div>
