<div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
<h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <table class="col-6 mx-auto">

    <tr class="field">
      <td><%= f.label :name,"ユーザー名" %></td>
      <td><%= f.text_field :name, autofocus: true %></td>
    </tr>

    <tr class="field">
      <td><%= f.label :password,"パスワード" %></td>
      <td><%= f.password_field :password, autocomplete: "current-password" %></td>
    </tr>

  </table>

      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->

  <div class="btn-wrapper col-2 mx-auto">
    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-info btn-sm btn-block mb-3' %>
    </div>
  </div>

  <% end %>
</div>

