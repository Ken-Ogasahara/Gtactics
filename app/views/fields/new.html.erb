<div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
  <h1>新規フィールド作成</h1>

  <%= form_with model: @field, url: fields_path, method: :post do |f| %>
  
  <table class="col-6 mx-auto">
    
    <tr class="field">
      <td><%= f.label :name,"フィールド名" %></td>
      <td><%= f.text_field :name, required: true, autofocus: true %></td>
    </tr>
      
    <tr class="field">
      <td><%= f.label :image,"画像" %></td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
  </table>

  <div class="btn-wrapper col-2 mx-auto">

    <div class="actions">
      <%= link_to "一覧", fields_path, method: :get, class: 'btn-sm btn-primary' %>

      <%= f.submit "作成", class: 'btn-sm btn-success' %>
    </div>
  </div>
  <% end %>
</div>
